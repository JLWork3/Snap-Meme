<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="gmsyrimis.c4q.nyc.cammy.VanillaActivity"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/backgroundfinal"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="290dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/vanilla_holder"
        >
        <ImageView
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_weight="2"
            android:id="@+id/vanilla_custom_image"
            android:background="#383838"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="COLLEGE GRADUATE"
            android:hint="Do not Click"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/vanilla_bottom_text"
            android:layout_alignTop="@+id/vanilla_custom_image"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="can't tie his shoes"
            android:hint="I will crach"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/vanilla_top_text"
            android:layout_alignBottom="@+id/vanilla_custom_image"
            android:layout_alignParentStart="true" />
    </RelativeLayout>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_gravity="right" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/btShare" />

</LinearLayout>